@model WardrobeApp.Models.Accessory

@{
    ViewBag.Title = "Details";
}

<div class="row title">
    <h2 class="title">Accessory Details</h2>
</div>




<div class="row">

    <div class="col-md-4 col-sm-3 col-xs-0"></div>
    <div class="col-md-4 col-sm-6 col-lg-1-xs-12">
        <div class="thumbnail details">
            <h3 class="item-name">
                @Html.DisplayFor(modelItem => Model.AccessoryName)
            </h3>
            <p class="home">
                <img class="item-details" src="@Html.DisplayFor(modelItem => Model.AccessoryPhoto)" />
                <h4>
                    Color:
                </h4>

            <p class="details">
                @Html.DisplayFor(model => model.AccessoryColor)
            </p>

            <h4>
                Season:
            </h4>

            <p class="details">
                @Html.DisplayFor(model => model.Season.Season1)
            </p>

            <h4>
                Occassion:
            </h4>
            <p class="details">
                @Html.DisplayFor(model => model.Occassion.OccassionType)
            </p>

            <p id="detail-links">
                @Html.ActionLink("Edit", "Edit", new { id = Model.AccessoryID }, new { @class = "nonnav-link-2" }) |
                @Html.ActionLink("Delete", "Delete", new { id = Model.AccessoryID }, new { @class = "nonnav-link-2" }) |
                @Html.ActionLink("Back to List", "Index", "Index", new { @class = "nonnav-link-2" })
            </p>
        </div>
    </div>

</div>